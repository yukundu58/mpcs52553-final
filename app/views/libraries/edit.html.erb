<% library = Library.find_by(id: params["id"]) %>

<h1>Editing <%= library.name %></h1>

<div class="row">
  <div class="col-sm-4">

    <%= form_tag "/libraries/#{library.id}", method: "patch" do %>

      <p>Name: <input value="<%= library.name %>" name="name" type="text" autofocus class="form-control"></p>
      <p>Address: <input value="<%= library.address %>"  name="address" type="text" class="form-control"></p>
      <p>Photo_URL: <input value="<%= library.photo_url %>" name="photo_url" type="text" class="form-control"></p>
      <p>Description: <input value="<%= library.description %>"  name="description" type="text" class="form-control"></p>
      <p>room_number: <input value="<%= library.room_number %>" name="room_number" type="integer" class="form-control"></p>

      <button class="btn btn-primary">Update Library</button>

    <% end %>

  </div>
</div>
